---
import LoadingText from './LoadingText.astro';
---

<div x-data="loading">
  <!-- <div> -->
  <div class="loading-screen">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <div
        class="loading-text w-[calc(280/375*100vw)] md:w-[calc(550/768*100vw)] lg:w-[calc(580/1024*100vw)] xl:w-[calc(680/1440*100vw)]"
      >
        <LoadingText />
      </div>
    </div>
  </div>
</div>
