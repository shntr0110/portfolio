{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "ESNext",
    "verbatimModuleSyntax": false,
    "types": ["vitest/importMeta"],
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"]
    }
  },
  "exclude": ["dist"], // https://github.com/withastro/language-tools/issues/643#issuecomment-1699486909
  "include": ["src/**/*"]
}
